<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/textviewNomPrenom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LY Abdoulaye Oumar"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp">

        <TextView
            android:id="@+id/textviewINE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ine here" />

        <TextView
            android:id="@+id/textviewFilPro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:text="Promo 2014-2015"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black">

    </LinearLayout>

</LinearLayout>